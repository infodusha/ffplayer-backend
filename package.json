  "devDependencies": {
    "@babel/core": "^7.7.7",
    "@babel/preset-env": "^7.7.7",
    "apollo-server-testing": "^2.9.16",
    "babel-plugin-transform-default-import": "^1.0.0",
    "eslint": "^6.8.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.4.0",
    "jest": "^24.9.0",
